#include <string>
#include <vector>
#include "Player.hpp"
using namespace std;

Player::Player(string nm, vector<Unit> us) {
    name = nm;
    units = us;
}

string Player::getName() {
    return name;
}

vector<Unit> Player::getUnits() {
    return units;
}

bool Player::hasAvailableUnits() {
    for (int i = 0; i < units.size(); i++) {
        Unit u = units.at(i);
        if (!u.hasMoved())
            return true;
    }
    return false;
}

void Player::refresh() {
    for (int i=0; i < units.size(); i++) {
        units.at(i).clearMoveFlag();
    }
}
